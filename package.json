{
  "name": "xefi-flutter",
  "displayName": "xefi_flutter",
  "description": "An extension to help xefi flutter devs to code faster",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xefi-flutter.openWiki",
        "title": "Open Wiki"
      },
      {
        "command": "xefi-flutter.openAppleConnect",
        "title": "App Store Connect"
      },
      {
        "command": "xefi-flutter.openPlayStore",
        "title": "Google Play Console"
      },
      {
        "command": "xefi-flutter.runBuildRunner",
        "title": "Run build_runner"
      },
      {
        "command": "xefi-flutter.createViewController",
        "title": "Add a ViewController"
      },
      {
        "command": "xefi-flutter.createEntityDtoMapper",
        "title": "Add an Entity (Dto + Mapper)"
      },
      {
        "command": "xefi-flutter.createUseCase",
        "title": "Add a Use Case"
      },
      {
        "command": "xefi-flutter.createTest",
        "title": "Add a Test File"
      },
      {
        "command": "xefi-flutter.createView",
        "title": "Add a View"
      },
      {
        "command": "xefi-flutter.createController",
        "title": "Add a Controller"
      },
      {
        "command": "xefi-flutter.createBindings",
        "title": "Add Bindings"
      },
      {
        "command": "xefi-flutter.createWidgetGetx",
        "title": "Add a GetX Widget in a View"
      },
      {
        "command": "xefi-flutter.createUseCaseFromExplorer",
        "title": "ðŸš€ Add a Use Case"
      },
      {
        "command": "xefi-flutter.createServiceFromExplorer",
        "title": "ðŸš€ Add a Service"
      },
      {
        "command": "xefi-flutter.createDtoFromExplorer",
        "title": "ðŸš€ Add a Dto"
      }
    ],
    "configuration": {
      "title": "Xefi Flutter Toolkit",
      "type": "object",
      "properties": {
        "Xefi Flutter Toolkit.isMonoRepo": {
          "type": "boolean",
          "default": false,
          "description": "Ajoute une etape de selection de l'app si vous en avez plusieurs dans votre dossier lib"
        },
        "Xefi Flutter Toolkit.packageName": {
          "type": "string",
          "default": "",
          "description": "Definit le nom de votre package pour les imports de fichier"
        },
        "Xefi Flutter Toolkit.urlGitlab": {
          "type": "string",
          "default": "",
          "description": "Definit l'url de votre repo urlGitlab"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtension",
          "title": "Xefi Flutter Toolkit",
          "icon": "media/icon_alternative.svg"
        }
      ]
    },
    "views": {
      "myExtension": [
        {
          "id": "myView",
          "name": "",
          "icon": "media/icon_alternative.svg"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "xefi-flutter.createUseCaseFromExplorer",
          "group": "navigation",
          "when": "explorerResourceIsFolder && resourceFilename == 'use_case'"
        },
        {
          "command": "xefi-flutter.createView",
          "group": "navigation",
          "when": "explorerResourceIsFolder && resourceFilename == 'view'"
        },
        {
          "command": "xefi-flutter.createServiceFromExplorer",
          "group": "navigation",
          "when": "explorerResourceIsFolder && resourceFilename == 'service'"
        },
        {
          "command": "xefi-flutter.createDtoFromExplorer",
          "group": "navigation",
          "when": "explorerResourceIsFolder && resourceFilename == 'dto'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "change-case": "^5.4.4"
  }
}